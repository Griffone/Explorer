---
import SVGEditor from "@components/SVGEditor.astro"
import MainLayout from "@layouts/MainLayout.astro"
import "@styles/materials.sass"
import "@styles/shapes.sass"
---

<MainLayout title="SVG Editor" description="Online SVG editor">
    <meta
        content="initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no"
        name="viewport"
        slot="head"
    />
    <main>
        <SVGEditor />
    </main>
</MainLayout>

<style lang="sass">
    html,body,main
        width: 100%
        height: 100%
        margin: 0
        padding: 0
        overflow: hidden

